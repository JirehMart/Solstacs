---
import { Image } from "astro:assets";
import facebook from "@/images/icons/fb.svg";
import ig from "@/images/icons/ig.svg";
import tiktok from "@/images/icons/tiktok.svg";
import youtube from "@/images/icons/yutu.svg";
import LogoSolstacH from "/public/LogoSolstacH.png"
---


<nav class="dark:bg-gray-900 fixed w-full z-20 top-0 start-0 bg-white/40 backdrop-filter backdrop-blur-lg ">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4  "
  >
  <a href="/Inicio" class="flex items-center space-x-3 rtl:space-x-reverse">
    <Image src={LogoSolstacH} class="h-8 w-auto" alt="Solstac Logo" loading="eager" />
  </a>
  
  
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" fill="none" viewBox="0 0 17 14">
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1 "
      id="navbar-sticky"
    >
      <ul
        class="flex flex-col p-4 md:p-0 mt-4 font-medium border text-lg border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-transparent dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
      >
        <li class="md:mx-2 ">
          <a
            href="/Inicio"
            class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 block py-2 px-3 text-gray-900 rounded hover:bg-yellow-100 md:hover:bg-transparent md:hover:text-orange-500 md:active:text-orange-500 md:p-0 md:dark:hover:text-orange-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            >Inicio</a
          >
        </li>
        <li class="md:mx-2">
          <a
            href="/Nosotros"
            class="transition  ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 block py-2 px-3 text-gray-900 rounded hover:bg-yellow-100 md:hover:bg-transparent md:hover:text-orange-500 md:p-0 md:dark:hover:text-orange-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            >Nosotros</a
          >
        </li>
        <li class="md:mx-2">
          <a
            href="/Energiasolar"
            class="transition  ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 block py-2 px-3 text-gray-900 rounded hover:bg-yellow-100 md:hover:bg-transparent md:hover:text-orange-500 md:p-0 md:dark:hover:text-orange-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            >Energía Solar</a
          >
        </li>
        <li class="md:mx-2">
          <a
            href="/Productos"
            class="transition  ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 block py-2 px-3 text-gray-900 rounded hover:bg-yellow-100 md:hover:bg-transparent md:hover:text-orange-500 md:p-0 md:dark:hover:text-orange-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            >Productos</a
          >
        </li>
        <li class="md:mx-2">
          <a
            href="/Contactanos"
            class="transition  ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 block py-2 px-3 text-gray-900 rounded hover:bg-yellow-100 md:hover:bg-transparent md:hover:text-orange-500 md:p-0 md:dark:hover:text-orange-500S dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            >Contáctanos</a
          >
        </li>
        
      </ul>
      
    </div>
    <div class=" md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse hidden md:flex">

      <div class="flex mt-14 sm:justify-center sm:mt-0">
        <!-- Enlace a Facebook -->
        <a href="https://www.facebook.com/solstacperu" class="icon-link" target="_blank" aria-label="Visita nuestra página de Facebook">
          <Image src={facebook} alt="Facebook" class="icon" loading="eager"/>
        </a>
      
        <!-- Enlace a Instagram -->
        <a href="https://www.instagram.com/solstacperu/" class="icon-link pl-4" target="_blank" aria-label="Visita nuestra página de Instagram">
          <Image src={ig} alt="Instagram" class="icon" loading="eager"/>
        </a>
      
        <!-- Enlace a TikTok -->
        <a href="https://www.tiktok.com/@solstacperu" class="icon-link pl-4" target="_blank" aria-label="Visita nuestra página de TikTok">
          <Image src={tiktok} alt="TikTok" class="icon" loading="eager"/>
        </a>
      
        <!-- Enlace a YouTube -->
        <a href="https://www.youtube.com/@OficialSolstacPeru" class="icon-link pl-4" target="_blank" aria-label="Visita nuestro canal de YouTube">
          <Image src={youtube} alt="YouTube" class="icon" loading="eager"/>
        </a>
      </div>
      
      <style>
        .icon-link {
          display: inline-flex;
          align-items: center;
          justify-content: center;
          padding: 8px;
          color: #4B5563; /* text-gray-600 */
          transition: color 200ms ease-in-out;
        }
        .icon-link:hover {
          color: #1F2937; /* text-gray-900 */
        }
        .icon {
          width: 24px;
          height: 24px;
        }
      </style>
    </div>
    
  </div>
</nav>

